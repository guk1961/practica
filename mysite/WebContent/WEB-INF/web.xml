            <param-name>contextConfigLocation</param-name>
            <param-value>
            			/WEB-INF/spring/servlet-context.xml
            </param-value>
        </init-param>
         
        <load-on-startup>1</load-on-startup>
    </servlet>        
 
    <servlet-mapping>
        <servlet-name>appServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    
